<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <layer-list>
            <item android:drawable="@drawable/item_bg_focused"/>
            <item android:bottom="@dimen/item_focus_width"
                android:top="@dimen/item_focus_width"
                android:right="@dimen/item_focus_width"
                android:left="@dimen/item_focus_width"
                android:drawable="@drawable/item_bg"/>
        </layer-list>
    </item>

    <item android:state_focused="true">
        <layer-list>
            <item android:drawable="@drawable/item_bg_focused"/>
            <item android:bottom="@dimen/item_focus_width"
                android:top="@dimen/item_focus_width"
                android:right="@dimen/item_focus_width"
                android:left="@dimen/item_focus_width"
                android:drawable="@drawable/item_bg"/>
        </layer-list>
    </item>

    <item android:state_selected="true">
        <layer-list>
            <item android:drawable="@drawable/item_bg_focused"/>
            <item android:bottom="@dimen/item_focus_width"
                android:top="@dimen/item_focus_width"
                android:right="@dimen/item_focus_width"
                android:left="@dimen/item_focus_width"
                android:drawable="@drawable/item_bg"/>
        </layer-list>
    </item>

    <item >
        <layer-list>
            <item android:drawable="@android:color/transparent"/>
            <item android:bottom="@dimen/item_focus_width"
                android:top="@dimen/item_focus_width"
                android:right="@dimen/item_focus_width"
                android:left="@dimen/item_focus_width"
                android:drawable="@drawable/item_bg"/>
        </layer-list>
    </item>

</selector>